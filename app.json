{
	"expo": {
		"name": "weatherio",
		"slug": "weatherio",
		"version": "1.0.0",
		"orientation": "portrait",
		"icon": "./assets/icon.png",
		"userInterfaceStyle": "light",
		"newArchEnabled": true,
		"splash": {
			"image": "./assets/splash-icon.png",
			"resizeMode": "contain",
			"backgroundColor": "#ffffff"
		},
		"plugins": [
			[
				"expo-location",
				{
					"locationAlwaysAndWhenInUsePermission": "Allow Weatherio to access your location to provide accurate weather information."
				}
			]
		],
		"ios": {
			"supportsTablet": true,
			"infoPlist": {
				"NSLocationWhenInUseUsageDescription": "This app needs access to your location to provide weather information for your area."
			}
		},
		"android": {
			"adaptiveIcon": {
				"foregroundImage": "./assets/adaptive-icon.png",
				"backgroundColor": "#ffffff"
			},
			"edgeToEdgeEnabled": true,
			"permissions": ["ACCESS_COARSE_LOCATION", "ACCESS_FINE_LOCATION"]
		},
		"web": {
			"favicon": "./assets/favicon.png"
		}
	}
}
